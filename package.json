{
  "name": "clean-node-api",
  "version": "1.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist  --inspect=0.0.0:9222 --nolazy ./dist/main/server.js",
    "build:watch": "tsc -w",
    "build": "rimraf dist && tsc",
    "up": "npm run build && docker-compose up -d",
    "up:watch": "npm run build && docker-compose up -d && npm run build:watch",
    "down": "docker-compose down",
    "test": "jest --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "jest --bail --findRelatedTests",
    "test:ci": "jest --coverage --passWithNoTests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "*",
    "@types/mongodb": "^3.6.12",
    "@types/supertest": "^2.0.11",
    "@types/typescript": "^2.0.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "eslint": "^7.24.0",
    "eslint-config-standard-with-typescript": "19.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.5",
    "rimraf": "*",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "*",
    "mongodb": "^3.6.6",
    "nodemon": "^2.0.7",
    "validator": "^13.5.2"
  },
  "engines": {
    "node": "14.x"
  }
}
